@using INSAATTaksitTakip.Models
@model  TBLGG_TIPI
@{
    ViewBag.Title = "KayitFormu";
    Layout = "~/Views/Shared/_YonetimLayout.cshtml";
}

<div class="item col-md-9 offset-md-2 col-xs-9 offset-xs-2 col-sm-9 offset-sm-2">
    <div id="kayit" style="align-items:center;">
        <form id="frm1" method="post" action="~/Yonetim/GelirGiderTipleri/KayitFormu" class="form-horizontal" style="margin-top:10px;" enctype="multipart/form-data">
            <input type="hidden" name="GG_TIPI_REFNO" value="@Model.GG_TIPI_REFNO" />
            <div class="form-group row">
                <div class="col-sm-2 ">Gelir/Gider Tip Adı</div>
                <div class="col-sm-10">
                    <input class="form-control" type="text" required value="@Model.GG_TIPI_ADI" maxlength="50" name="GG_TIPI_ADI" id="GG_TIPI_ADI" />
                    @Html.ValidationMessageFor(m => m.GG_TIPI_ADI, "", new { @style = "color:green" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 ">Gelir Gider Türü</div>
                <div class="col-sm-10">
                    Gelir/Alacak
                    @Html.RadioButtonFor(model => model.GG_TURU, "True")
                    Gider/Borç
                    @Html.RadioButtonFor(model => model.GG_TURU, "False")
                </div>
                @Html.ValidationMessageFor(m => m.GG_TURU, "", new { @style = "color:green" })
            </div>
    </div>
    <div class="form-group">
        <div style="align-items:center;">
            <input class="btn btn-primary" type="submit" value="Kaydet" />
            <a href="~/Yonetim/GelirGiderTipleri/Index" class="btn btn-warning">Vazgeç</a>
        </div>
    </div>
    </form>
</div>
</div>




