@using INSAATTaksitTakip.Models
@model TBLGELIR_GIDER
@{
    ViewBag.Title = "KayitFormu";
    Layout = "~/Views/Shared/_YonetimLayout.cshtml";
    var ggtip = ViewData["ggtip"] as List<TBLGG_TIPI>;
}

<div class="item  col-md-6 offset-md-2 col-xs-6 offset-xs-2 col-sm-6 offset-sm-2">
    <div id="kayit" style="align-items:center;">
        <form id="frm1" method="post" action="~/Yonetim/GelirGider/KayitFormu" class="form-horizontal" style="margin-top:10px;" enctype="multipart/form-data">
            <input type="hidden" name="GELIR_GIDER_REFNO" value="@Model.GELIR_GIDER_REFNO" />
            <div class="form-group">
                <div class="col-sm-3">Gelir/Gider Tipi</div>
                <div class="col-sm-9">
                    <select class="form-control" name="GG_TIPI_REFNO" id="GG_TIPI_REFNO">
                        @for (int i = 0; i < ggtip.Count; i++)
                        {
                            if (ggtip[i].GG_TIPI_REFNO == Model.GG_TIPI_REFNO)
                            {
                                <option selected value="@ggtip[i].GG_TIPI_REFNO">@ggtip[i].GG_TIPI_ADI</option>
                            }
                            else
                            {
                                <option value="@ggtip[i].GG_TIPI_REFNO">@ggtip[i].GG_TIPI_ADI</option>
                            }

                        }
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 ">Gelir Gider Türü</div>
                <div class="col-sm-10">
                    Gelir/Alacak
                    @Html.RadioButtonFor(model => model.GELIR_GIDER_TURU, "True")
                    Gider/Borç
                    @Html.RadioButtonFor(model => model.GELIR_GIDER_TURU, "False")
                </div>

                @Html.ValidationMessageFor(m => m.GELIR_GIDER_TURU, "", new { @style = "color:green" })
            </div>
            <div class="form-group row">
                <div class="col-sm-2 ">Gider/Borç</div>
                <div class="col-sm-10"><input class="form-control" type="text" required value="@Model.BORC" maxlength="50" name="BORC" id="BORC" /></div>
            </div>

            <div class="form-group row">
                <div class="col-sm-2 ">Gelir/Alacak</div>
                <div class="col-sm-10"><input class="form-control" type="text" required value="@Model.ALACAK" maxlength="50" name="ALACAK" id="ALACAK" /></div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 ">Açıklama</div>
                <div class="col-sm-10"><textarea class="form-control" type="text" value="@Model.ACIKLAMA" name="ACIKLAMA" id="ACIKLAMA"></textarea></div>
            </div>
            <div class="form-group">
                <div style="align-items:center;">
                    <input class="btn btn-primary" type="submit" value="Kaydet" />
                    <a href="~/Yonetim/GelirGider/Index" class="btn btn-warning">Vazgeç</a>
                </div>
            </div>
        </form>
    </div>
</div>
