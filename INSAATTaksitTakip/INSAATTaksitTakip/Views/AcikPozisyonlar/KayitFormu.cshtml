@using INSAATTaksitTakip.Models

@model TBLACIKPOZISYONLAR
@{
    ViewBag.Title = "KayitFormu";
    Layout = "~/Views/Shared/_YonetimLayout.cshtml";
}
<script type="text/javascript" src="@Url.Content("~/ckeditor/ckeditor.js")"></script>
<script type="text/javascript" src="@Url.Content("~/ckfinder/ckfinder.js")"></script>
<div class="item  col-md-9 offset-md-2 col-xs-9 offset-xs-2 col-sm-9 offset-sm-2">
    <div id="kayit" style="align-items:center;">
        <form id="frm1" method="post" action="~/Yonetim/AcikPozisyonlar/KayitFormu" class="form-horizontal" style="margin-top:10px;" enctype="multipart/form-data">
            <input type="hidden" name="POZISYON_REFNO" value="@Model.POZISYON_REFNO" />
            <div class="form-group row">
                <div class="col-sm-2 ">Pozisyon Adı</div>
                <div class="col-sm-10">
                <input class="form-control" type="text" required value="@Model.POZISYON_ADI" maxlength="50" name="POZISYON_ADI" id="POZISYON_ADI" />
                    @Html.ValidationMessageFor(m=>m.POZISYON_ADI,"",new {@style="color:green" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 ">Pozisyon Detayı</div>
                <div class="col-sm-10">
                    @Html.TextAreaFor(m => m.POZISYON_DETAYI, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.POZISYON_DETAYI, "", new { @style = "color:green" })

                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 ">Yayın Durumu</div>
                <div class="col-sm-10 ">
                    Aktif
                    @Html.RadioButtonFor(model => model.POZISYON_DURUMU, "True")
                    Pasif
                    @Html.RadioButtonFor(model => model.POZISYON_DURUMU, "False")
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2 ">Yayın Tarihi</div>
                <div class="col-sm-10">
                    <input class="form-control" type="date" value="@Model.TARIH.ToString("yyyy-MM-dd")" name="TARIH" id="TARIH" />
                </div>
            </div>
            <div class="form-group">
                <div style="align-items:center;">
                    <input class="btn btn-primary" type="submit" value="Kaydet" />
                    <a href="~/Yonetim/AcikPozisyonlar/Index" class="btn btn-warning">Vazgeç</a>
                </div>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    CKEDITOR.replace('POZISYON_DETAYI');
    CKFinder.setupCKEditor(null, '/ckfinder/');
</script>
