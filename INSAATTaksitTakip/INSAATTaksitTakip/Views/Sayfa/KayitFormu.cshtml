@using INSAATTaksitTakip.Models
@model TBLSAYFA
@{
    ViewBag.Title = "KayitFormu";
    Layout = "~/Views/Shared/_YonetimLayout.cshtml";
}
<script type="text/javascript" src="@Url.Content("~/ckeditor/ckeditor.js")"></script>
<script type="text/javascript" src="@Url.Content("~/ckfinder/ckfinder.js")"></script>

<div class="item  col-md-9 offset-md-2 col-xs-9 offset-xs-2 col-sm-9 offset-sm-2">
    <div id="kayit" style="align-items:center;">
        <form id="frm1" method="post" action="~/Yonetim/Sayfa/KayitFormu" class="form-horizontal" style="margin-top:10px;">
            <div class="form-group row">
                <div class="col-sm-2">Sayfa Refno</div>
                <div class="col-sm-10"><input class="form-control" type="text" name="SAYFA_REFNO" id="SAYFA_REFNO" value="@Model.SAYFA_REFNO" /></div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">Sayfa Adı</div>
                <div class="col-sm-10">
                    <input class="form-control" type="text" name="ADI" id="ADI" value="@Model.ADI" />
                    @Html.ValidationMessageFor(m => m.ADI, "", new { @style = "color:green" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-2">Sayfa İçeriği</div>
                <div class="col-sm-10">
                    <textarea class="form-control" name="ICERIK" id="ICERIK"> @Html.Raw(Model.ICERIK)</textarea>
                    @Html.ValidationMessageFor(m => m.ICERIK, "", new { @style = "color:green" })
                </div>
            </div>
            <div class="form-group">
                <div style="align-items:center;">
                    <input class="btn btn-primary" type="submit" value="Kaydet" />
                    <a href="~/Yonetim/SAYFA/Index" class="btn btn-warning">Vazgeç</a>
                </div>
            </div>
        </form>
    </div>
</div>


<script type="text/javascript">
        CKEDITOR.replace('ICERIK');
        CKFinder.setupCKEditor(null, '/ckfinder/');
</script>

